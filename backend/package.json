{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/src/server.js",
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "npm run build:clean && tsc",
    "build:watch": "npm run build:clean && tsc -w",
    "start": "node dist/server.js",
    "start:dev": "tsc-watch --noClear --onSuccess 'npm run start'",
    "dev": "npx node-pg-migrate up && concurrently \"npm run pg:watch\" \"npm run start:dev\"",
    "pg:watch": "pgtyped -w -c pgtyped.config.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.10",
    "@types/pg": "^8.6.4",
    "concurrently": "^7.0.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "dotenv": "^14.2.0",
    "fastify": "^3.27.0",
    "fastify-plugin": "^3.0.0",
    "fastify-postgres": "^3.6.0",
    "node-pg-migrate": "^6.2.1",
    "pg": "^8.7.1",
    "purify-ts": "^1.1.0"
  }
}
