{
  "transforms": [
    {
      "mode": "sql",
      "include": "**/*.sql",
      "emitTemplate": "{{dir}}/{{name}}.queries.ts"
    }
  ],
  "srcDir": "./src/",
  "failOnError": false,
  "camelCaseColumnNames": true,
  "db": {
    "host": "db",
    "user": "postgres",
    "password": "postgres",
    "dbName": "example"
  }
}